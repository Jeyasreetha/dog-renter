<div class="navbar navbar-expand-sm navbar-light navbar-lewagon <%= 'navbar-home' if params[:controller] == "dogs" && params[:action] == "index" %>">
  <%= link_to dogs_path, class: "navbar-brand" do %>
    <%= image_tag "https://image.flaticon.com/icons/svg/181/181867.svg", class: "svg" %>
    <p class="logo-name">PupHub</p>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if !@user.present? %>
        <li class="nav-item active">
          <%= link_to "Sign-up",  new_user_registration_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Log-in", user_session_path, class: "nav-link" %>
        </li>
      <% else %>
        <li class="nav-item dropdown">

          <!-- <div class="p-2 bd-highlight text-center"> -->
            <% if @user.image? %>
              <%= image_tag @user.image, alt: "alttext", class: 'avatar dropdown-toggle', id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% else %>
              <!-- <img class="avatar-large dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" alt="avatar-large" src="https://upload.wikimedia.org/wikipedia/commons/thumb/7/7e/Circle-icons-profile.svg/1024px-Circle-icons-profile.svg.png"> -->
              <%= image_tag "https://upload.wikimedia.org/wikipedia/commons/thumb/7/7e/Circle-icons-profile.svg/1024px-Circle-icons-profile.svg.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% end %>
          <!-- </div> -->

          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item", id: "dropdown-logout" %>
            <%= link_to "See profile", dashboard_path, class: "dropdown-item" %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
